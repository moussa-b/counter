<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="SegmentedButtonLayout">
        <item name="android:background">@drawable/background_selector_segmented_button</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:clickable">true</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="SegmentedButtonLayout_Title">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/sb_title_text_size</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:paddingEnd" tools:targetApi="jelly_bean_mr1">
            @dimen/sb_horizontal_padding
        </item>
        <item name="android:paddingLeft">@dimen/sb_horizontal_padding</item>
        <item name="android:paddingStart" tools:targetApi="jelly_bean_mr1">
            @dimen/sb_horizontal_padding
        </item>
        <item name="android:paddingRight">@dimen/sb_horizontal_padding</item>
    </style>

    <style name="SegmentedButtonLayout_Subtitle">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/sb_title_text_size</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:paddingTop">0dp</item>
    </style>
</resources>