        <Preference
            android:summary="@string/summary_export_data"
            android:title="@string/title_export_data"/>

        <Preference
            android:summary="@string/summary_import_data"
            android:title="@string/title_import_data"/>

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/pref_header_about">

        <Preference
            android:selectable="false"
            android:summary="@string/summary_about"/>

        <Preference
            android:summary="@string/versionName"
            android:title="@string/title_version"/>

        <Preference
            android:summary="@string/summary_tutorial"
            android:title="@string/title_tutorial"/>

        <Preference
            android:summary="@string/summary_share"
            android:title="@string/title_share"/>

        <Preference
            android:summary="@string/summary_contact_us"
