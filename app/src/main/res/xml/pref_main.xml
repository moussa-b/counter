<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="@string/pref_header_controls">

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="@string/key_activate_sound"
            android:summary="@string/summary_activate_sound"
            android:title="@string/title_activate_sound"/>

        <CheckBoxPreference
            android:defaultValue="true"
