<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/teal</item>
        <item name="colorPrimaryDark">@color/darkteal</item>
        <item name="colorAccent">@color/cyan</item>
        <item name="android:fontFamily">@font/fallingsky</item>
        <item name="fontFamily">@font/fallingsky</item> <!-- target android sdk versions < 26 and > 14 if theme other than AppCompat -->
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

</resources>
