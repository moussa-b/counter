<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="wrap_content"
                                             android:layout_height="wrap_content"
                                             android:clickable="false"
                                             android:focusable="false"
                                             android:focusableInTouchMode="false">

    <ImageView
        android:id="@+id/color_picker_image_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:contentDescription="@string/color_picker_item_description"
        android:focusable="false"
        android:focusableInTouchMode="false">
    </ImageView>

    <ImageView
        android:id="@+id/selected_color_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:contentDescription="@string/color_picker_selected_color"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:src="@drawable/check_photo"
        app:layout_constraintRight_toRightOf="@id/color_picker_image_button"
        app:layout_constraintTop_toTopOf="@id/color_picker_image_button"/>

</android.support.constraint.ConstraintLayout>